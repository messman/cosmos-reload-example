{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"target": "ES2019",
		"sourceMap": true,
		"allowJs": false,
		"checkJs": false,
		"alwaysStrict": true,
		"strict": true,
		"skipLibCheck": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noEmitOnError": true,
		"preserveConstEnums": true,
		"declaration": false,
		"declarationMap": false,
		"lib": [
			"DOM",
			"ES2019"
		],
		"jsx": "react",
		"outDir": "./ts-build",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*"
	]
}